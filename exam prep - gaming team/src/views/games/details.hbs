<section id="details-info">
    <div class="game-image">
        <img src="{{searchedGame.image}}">
    </div>

    <div class="game-info">
        <div class="game-text">
            <h1 id="name">{{searchedGame.name}}</h1>
            <h3 id="platform">Platform: {{searchedGame.platform}}</h3>
            <p id="price"><span>Price: ${{searchedGame.price}}</span></p>
            <p id="genre"><span>Genre: {{sarchedGame.genre}}</span></p>
            <p id="description">{{searchedGame.description}}</p>
        </div>
        {{#if isAuthenticated}}
        <div class="product-btn">
            <!--Only for registered user and author of the publication -->
            {{#if isOwner}}
            <div class="author">
                <a href="/games/{{searchedGame._id}}/edit" class="btn-edit">Edit</a>
                <a href="/games/{{searchedGame._id}}/delete" class="btn-delete">Delete</a>
            </div>
            <!-- Logged in user who has not yet buy this game code-->
            {{else if isVoted}}
            <!-- Logged in user who has already buy this game code-->
            <p class="buy-message">You have already bought this game</p>
            {{else}}
            <a href="/games/{{searchedGame._id}}/vote" class="btn-buy">Buy</a>
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>