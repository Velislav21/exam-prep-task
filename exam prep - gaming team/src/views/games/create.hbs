
<section id="create-container">
    <div class="create-container-info">
        <h1>Create Game Code Offer</h1>
        <h4>Post your code to sell</h4>
        <form method="POST">
            <label>Platform:</label>
            <select id="platform" name="platform">
                {{#each platform}}
                <option value="{{value}}" {{selected}}>{{label}}</option>
                {{/each}}
            </select>
            <label>Name:</label>
            <input type="text" id="name" value="{{game.name}}" name="name">
            <label>Image:</label>
            <input type="text" id="image" name="image" value="{{game.image}}" placeholder="http://...">
            <label>Price:</label>
            <input type="number" id="price" value="{{game.price}}" name="price">
            <label>Genre:</label>
            <input type="text" id="genre" value="{{game.genre}}" name="genre">
            <label>Description:</label>
            <textarea id="description" value="{{game.description}}" name="description"></textarea>

            <input type="submit" id="btn" value="CREATE"></input>
        </form>
    </div>
</section>